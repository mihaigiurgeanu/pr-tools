#!/usr/bin/env python3

import git
import os
import requests
import sys

def main():
    if 'SLACK_WEBHOOK' not in os.environ:
        print('Error: SLACK_WEBHOOK environment variable not set')
        sys.exit(1)
    webhook = os.environ['SLACK_WEBHOOK']
    repo = git.Repo('.')
    branch = sys.argv[1] if len(sys.argv) > 1 else repo.active_branch.name
    md_path = os.path.expanduser(f'~/pr-drafts/{branch}.md')
    if not os.path.exists(md_path):
        print(f'Error: Snapshot not found at {md_path}')
        sys.exit(1)
    with open(md_path, 'r') as f:
        md = f.read()
    message = f'New PR: {branch}\n\n{md}\n\nReact with :thumbsup: to approve or :thumbsdown: to request changes.'
    response = requests.post(webhook, json={'text': message})
    if response.status_code != 200:
        print('Error posting to Slack')
    else:
        print('PR sent to Slack')

if __name__ == '__main__':
    main()
